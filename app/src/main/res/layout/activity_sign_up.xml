<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_eap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <EditText
        android:id="@+id/etd_Username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/app_logo"
        android:layout_marginTop="10dp"
        android:hint="Username"
        android:padding="13dp"
        android:background="@drawable/etd_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/etd_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etd_Username"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:padding="13dp"
        android:background="@drawable/etd_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


    <EditText
        android:id="@+id/etd_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etd_email"
        android:layout_marginTop="10dp"
        android:padding="13dp"
        android:hint="Password"
        android:background="@drawable/etd_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>



    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etd_password"
        android:text="Sign Up"
        android:background="@drawable/btn_background"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>


</RelativeLayout>