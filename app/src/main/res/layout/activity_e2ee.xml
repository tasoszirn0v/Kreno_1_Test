<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ECE0FB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".E2EE">
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_eap" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Η εφαρμογή πλέον διαθέτει προεπιλεγένη"
        android:background="#F8F6E6"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#820A97"
        android:textSize="19sp"
        android:textStyle="bold|normal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F6E6"
        android:text="κρυπτογράφηση από άκρο σε άκρο (Ε2ΕΕ).  "
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#820A97"
        android:textSize="19sp"
        android:textStyle="bold|normal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F6E6"
        android:text="Πατώντας το κουμπί Crypto,όλα τα μηνύμα-"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#820A97"
        android:textSize="19sp"
        android:textStyle="bold|normal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F6E6"
        android:text="τα που στέλνετε και λαμβάνετε, είναι ήδη  "
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#820A97"
        android:textSize="19sp"
        android:textStyle="bold|normal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F6E6"
        android:text="  κρυπτοφραφημένα. "

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#820A97"
        android:textSize="19sp"
        android:textStyle="bold|normal" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/crypto_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_e2ee_lock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="#542791"
            android:textStyle="bold"
            android:text="CRYPTO"
            />

    </LinearLayout>

</LinearLayout>