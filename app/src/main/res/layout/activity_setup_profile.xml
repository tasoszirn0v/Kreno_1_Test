<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    tools:context=".SetupProfile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageCircView"
        android:layout_marginTop="32dp"
        android:src="@drawable/avatar"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:text="Profile χρήστη"
        android:textAlignment="center"
        android:layout_marginTop="19dp"
        android:textSize="20sp"
        android:textStyle="bold|normal"
        android:textColor="#3F1981"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Πιέστε το εικονίδιο για να προσθέσετε την φωτογραφία του profile σας και τις προσωπικές σας ρυθμίσεις"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textStyle="bold|normal"
        android:textColor="#3F1981"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp"
            android:background="@color/white"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nameBox"
                android:hint="Εισάγετε το όνομα χρήστη"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="20sp"
                android:textStyle="bold|normal"
                android:ems="1"
                android:textColor="#3F1981"
                android:layout_marginBottom="15dp"
                android:background="#FAE8FD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/continue01Btn"
                android:text="Setup Profile"
                android:textStyle="bold|normal"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="#3F1981"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>