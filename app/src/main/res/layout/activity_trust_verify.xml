            android:layout_gravity="center"

            android:background="#F3EEC3"
            android:gravity="center"
            android:hint="48-...-51"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold|normal" />

        <TextView
