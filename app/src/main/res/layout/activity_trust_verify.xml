        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
         />
    <ImageView
        android:src="@drawable/ic_verified_user"
        android:id="@+id/okBtn"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
      >

    </ImageView>

</LinearLayout>