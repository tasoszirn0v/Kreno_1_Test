            android:layout_gravity="center"

            android:textColor="@color/black"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/a3"
            android:hint="08-...-11"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="18sp"
